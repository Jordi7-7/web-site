---
import { isConciseBody } from 'typescript';

interface Card2 {
  icon:string,
  img:string,
  title:string,
  body:string,
  info:string
}

interface Props {
  card:Card2
}

const { card } = Astro.props;
---
<div
  class="flex flex-col min-h-[400px] gap-28 hover:gap-4 p-8 pt-14 w-1/3 bg-gray-bg hover:bg-primary hover:-translate-y-36 transition-all rounded-2xl hover:text-white text-black relative group overflow-hidden"
>
  <img
    src="/hero-image.jpg"
    alt=""
    class="size-48 rounded-full absolute right-[-192px] top-[-192px] transition-all group-hover:-translate-x-[150px] group-hover:translate-y-[140px]"
  />

  <div class="size-10" set:html={card.icon}></div> {/* Inserta el SVG aqu√≠ */}
  <div>
  <div>
    <h2 class="font-bold text-2xl w-3/4">{card.title}</h2>
    <p class="text-white text-sm opacity-0 group-hover:opacity-100 transition-all text-justify mt-5 mb-9">
      {card.body}
    </p>
    <p
      class="text-white font-semibold uppercase opacity-0 group-hover:opacity-100 transition-all"
    >
     {card.info}
    </p>
  </div>
</div>
