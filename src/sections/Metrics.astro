---
import MetricItem from "../components/Metric-item.astro";

const info = [
    { number: "10+", text: "Year Experience" },
    { number: "12K", text: "Happy Clients" },
    { number: "4.8", text: "Overall Rating" },
];
---

<section  class="flex flex-row gap-7">
    {info.map(item => <MetricItem number={item.number} text={item.text}/>)}
</section>
